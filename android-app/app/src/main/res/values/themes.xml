<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SerialRemote" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_1</item>
        <item name="colorPrimaryVariant">@color/primary_2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_1</item>
        <item name="colorSecondaryVariant">@color/secondary_2</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:windowLayoutInDisplayCutoutMode">
            shortEdges <!-- to display over the cutouts in landscape mode -->
        </item>

    </style>

    <style name="Theme.SerialRemote.Fullscreen" parent="Theme.SerialRemote">
        <item name="android:actionBarStyle">
            @style/Widget.Theme.SerialRemote.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.SerialRemote.FullscreenContainer"
           parent="Theme.SerialRemote">
        <item name="fullscreenBackgroundColor">@color/black_overlay</item>
        <item name="fullscreenTextColor">@color/white</item>
    </style>

</resources>